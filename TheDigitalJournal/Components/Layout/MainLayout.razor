@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <div class="top-row">
            <a class="navbar-brand" href="">
                <span class="app-icon">📔</span>
                <span class="app-title">Daily Journal</span>
            </a>
        </div>

        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="icon">🏠</span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="today">
                    <span class="icon">✍️</span> Today's Entry
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="calendar">
                    <span class="icon">📅</span> Calendar View
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="entries">
                    <span class="icon">📖</span> All Entries
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="analytics">
                    <span class="icon">📊</span> Analytics
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="settings">
                    <span class="icon">⚙️</span> Settings
                </NavLink>
            </div>
        </nav>
    </div>

    <main>
        <div class="top-bar">
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Search entries...">
            </div>
            <div class="top-actions">
                <button class="icon-btn">🔔</button>
                <button class="icon-btn">👤</button>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        width: 250px;
        background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        flex-direction: column;
    }

    .top-row {
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: white;
        text-decoration: none;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .app-icon {
        font-size: 1.75rem;
    }

    nav {
        flex: 1;
        padding: 1rem 0;
    }

    .nav-item {
        margin-bottom: 0.25rem;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.2s;
        font-weight: 500;
    }

    .nav-link:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .icon {
        font-size: 1.25rem;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background: #f5f7fa;
    }

    .top-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 2rem;
        background: white;
        border-bottom: 1px solid #e5e7eb;
    }

    .search-container {
        flex: 1;
        max-width: 500px;
    }

    .search-input {
        width: 100%;
        padding: 0.625rem 1rem;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        font-size: 0.875rem;
    }

    .top-actions {
        display: flex;
        gap: 0.5rem;
    }

    .icon-btn {
        width: 40px;
        height: 40px;
        border: none;
        background: #f3f4f6;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.25rem;
        transition: background 0.2s;
    }

    .icon-btn:hover {
        background: #e5e7eb;
    }

    .content {
        flex: 1;
        overflow-y: auto;
        padding: 2rem;
    }
</style>