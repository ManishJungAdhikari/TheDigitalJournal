@page "/analytics"
@using TheDigitalJournal.ViewModels
@inject AnalyticsViewModel ViewModel

<div class="analytics-container">
    <div class="analytics-header">
        <div class="header-main">
            <h1>üìä Analytics & Insights</h1>
            <p class="subtitle">Personal growth and emotional trends</p>
        </div>
        
        <div class="analytics-filters card">
            <div class="filter-group">
                <label>From</label>
                <input type="date" @bind="_filterStart" class="filter-date" />
            </div>
            <div class="filter-group">
                <label>To</label>
                <input type="date" @bind="_filterEnd" class="filter-date" />
            </div>
            <button class="apply-btn" @onclick="ReloadAnalytics">Update Range</button>
        </div>
    </div>

    <div class="stats-summary-row">
        <div class="stat-summary-card card">
            <span class="label">Most Frequent Mood</span>
            <div class="value">@ViewModel.MostFrequentMood</div>
        </div>
        <div class="stat-summary-card card">
            <span class="label">Avg. Words / Entry</span>
            <div class="value">@ViewModel.AvgWordsPerEntry</div>
        </div>
        <div class="stat-summary-card card">
            <span class="label">Filtered Entries</span>
            <div class="value">@ViewModel.TotalEntries</div>
        </div>
    </div>

    <div class="analytics-grid">
        @* Mood Distribution *@
        <div class="analytics-card large card">
            <h3>üìà Mood Distribution</h3>
            <div class="chart-container">
                @if (!string.IsNullOrEmpty(ViewModel.MoodChartData))
                {
                    <div class="pie-chart" style="background: @ViewModel.MoodChartData"></div>
                }
                <div class="chart-legend">
                    @{ int colorIdx = 0; var legendColors = new[] { "#10b981", "#667eea", "#ef4444", "#f59e0b", "#6b7280" }; }
                    @foreach (var mood in ViewModel.MoodDistribution)
                    {
                        <div class="legend-item">
                            <span class="legend-color" style="background-color: @legendColors[colorIdx % legendColors.Length]"></span>
                            <span class="legend-text">@mood.Key: @mood.Value entries</span>
                        </div>
                        colorIdx++;
                    }
                    @if (!ViewModel.MoodDistribution.Any())
                    {
                        <p class="empty-msg">No mood data recorded.</p>
                    }
                </div>
            </div>
        </div>

        @* Streak & Missed Days *@
        <div class="analytics-card card">
            <h3>üî• Streak Information</h3>
            <div class="streak-stats">
                <div class="streak-item">
                    <div class="streak-label">Current Streak</div>
                    <div class="streak-value primary">@ViewModel.CurrentStreak days</div>
                </div>
                <div class="streak-item">
                    <div class="streak-label">Longest Streak</div>
                    <div class="streak-value">@ViewModel.LongestStreak days</div>
                </div>
                <div class="missed-days-section">
                    <h4>Missed Days (In Window)</h4>
                    <div class="missed-days-list">
                        @if (ViewModel.MissedDays.Any())
                        {
                            var daysToShow = _showAllMissed ? ViewModel.MissedDays : ViewModel.MissedDays.Take(8);
                            @foreach (var day in daysToShow)
                            {
                                <span class="missed-day-tag">@day.ToString("MMM dd")</span>
                            }
                            @if (ViewModel.MissedDays.Count > 8)
                            {
                                <button class="see-more-link" @onclick="ToggleMissed">
                                    @(_showAllMissed ? "Show less" : $"+{ViewModel.MissedDays.Count - 8} more...")
                                </button>
                            }
                        }
                        else
                        {
                            <span class="all-captured">No days missed! üéâ</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        @* 3. Most Used Tags - VERTICAL BAR CHART *@
        <div class="analytics-card large card">
            <h3>üè∑Ô∏è Most Used Tags</h3>
            <div class="tag-bar-chart-vertical">
                @if (ViewModel.TopTags.Any())
                {
                    var maxCount = ViewModel.TopTags.Max(t => t.Count);
                    @foreach (var tag in ViewModel.TopTags.Take(8))
                    {
                        <div class="v-bar-item">
                            <div class="v-bar-container">
                                @{ var barHeight = maxCount > 0 ? (tag.Count * 100 / maxCount) : 0; }
                                <div class="v-bar" style="height: @barHeight%">
                                    <span class="v-bar-value">@tag.Count</span>
                                </div>
                            </div>
                            <div class="v-bar-label">#@tag.Name</div>
                        </div>
                    }
                }
                else
                {
                    <p class="empty-msg">No tag usage data yet.</p>
                }
            </div>
        </div>

        @* 4. Tag Breakdown (Horizontal %) *@
        <div class="analytics-card card">
            <h3>üìä Tag Breakdown</h3>
            <div class="tag-chart-mini">
                @foreach (var tag in ViewModel.TopTags.Take(5))
                {
                    <div class="mini-tag-item">
                        <div class="mini-tag-info">
                            <span class="tag-name">#@tag.Name</span>
                            <span class="tag-percent">@tag.Percentage%</span>
                        </div>
                        <div class="mini-tag-bar"><div class="mini-fill" style="width: @tag.Percentage%"></div></div>
                    </div>
                }
            </div>
        </div>

        @* Category Distribution *@
        <div class="analytics-card card">
            <h3>üìë Category Distribution</h3>
            <div class="category-breakdown">
                @foreach (var cat in ViewModel.CategoryDistribution)
                {
                    <div class="category-item">
                        <div class="category-header">
                            <span class="category-name">@cat.Name</span>
                            <span class="percentage">@cat.Percentage%</span>
                        </div>
                        <div class="category-bar"><div class="category-fill" style="width: @cat.Percentage%"></div></div>
                    </div>
                }
            </div>
        </div>

        @* Word Count Trends *@
        <div class="analytics-card large card">
            <h3>‚úçÔ∏è Word Count Trends</h3>
            <div class="trend-chart">
                @foreach (var trend in ViewModel.WordCountTrends)
                {
                    <div class="trend-item">
                        <div class="trend-bar-container">
                            @{
                                var maxTrend = ViewModel.WordCountTrends.Any() ? ViewModel.WordCountTrends.Max(t => t.Count) : 0;
                                var trendHeight = maxTrend > 0 ? (trend.Count * 100 / maxTrend) : 0;
                            }
                            <div class="trend-bar" style="height: @trendHeight%">
                                <span class="trend-value">@trend.Count</span>
                            </div>
                        </div>
                        <div class="trend-date">@trend.Date</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private bool _showAllMissed = false;
    private DateTime? _filterStart;
    private DateTime? _filterEnd;

    protected override async Task OnInitializedAsync() 
    {
        _filterEnd = DateTime.Today;
        _filterStart = DateTime.Today.AddDays(-30);
        await ViewModel.InitializeAsync(_filterStart, _filterEnd);
    }

    private async Task ReloadAnalytics()
    {
        await ViewModel.InitializeAsync(_filterStart, _filterEnd);
    }

    private void ToggleMissed() => _showAllMissed = !_showAllMissed;
}

<style>
