@page "/entries"
@using TheDigitalJournal.ViewModels
@using TheDigitalJournal.Utils
@using System.Text.RegularExpressions
@using Microsoft.Maui.Controls
@inject EntriesViewModel ViewModel
@inject NavigationManager Navigation

<div class="entries-container">
    <div class="entries-header">
        <h1>üìñ All Entries</h1>
        <div class="header-actions">
            <input type="text" class="search-box" placeholder="Search entries..."
                   @bind="ViewModel.SearchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
        </div>
    </div>

    <div class="filter-bar card">
        <div class="filter-row">
            <div class="filter-section">
                <label>Category:</label>
                <select class="filter-select" @onchange="OnCategoryChanged">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewModel.Categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
            </div>

            <div class="filter-section">
                <label>From:</label>
                <input type="date" class="filter-date" @onchange="OnStartDateChanged" />
            </div>

            <div class="filter-section">
                <label>To:</label>
                <input type="date" class="filter-date" @onchange="OnEndDateChanged" />
            </div>
            
            <button class="clear-filters-btn" @onclick="ClearFilters">Clear All</button>
        </div>

        <div class="filter-row sub-filter">
            <label>Moods:</label>
            <div class="chip-container">
                @foreach (var mood in ViewModel.Moods)
                {
                    <span class="filter-chip mood @(ViewModel.SelectedMoodIds.Contains(mood.Id) ? "active" : "")"
                          @onclick="() => OnMoodToggled(mood.Id)">
                        @mood.Icon @mood.Name
                    </span>
                }
            </div>
        </div>

        <div class="filter-row sub-filter">
            <label>Tags:</label>
            <div class="chip-container">
                @foreach (var tag in ViewModel.Tags)
                {
                    <span class="filter-chip tag @(ViewModel.SelectedTagIds.Contains(tag.Id) ? "active" : "")"
                          @onclick="() => OnTagToggled(tag.Id)">
                        @tag.Name
                    </span>
                }
            </div>
        </div>
    </div>

    @if (ViewModel.IsLoading)
    {
        <div class="loading-state">Loading entries...</div>
    }
    else if (!ViewModel.Entries.Any())
    {
        <div class="empty-state">
            <p>No journal entries found. Start writing today!</p>
            <a href="/today" class="btn-primary">Write Today's Entry</a>
        </div>
    }
    else
    {
        <div class="entries-content">
            <div class="entries-list">
                @foreach (var entry in ViewModel.Entries)
                {
                    <div class="entry-card card">
                        <div class="entry-header">
                            <div class="entry-date-badge">
                                <div class="badge-day">@entry.Date.Day</div>
                                <div class="badge-month">@entry.Date.ToString("MMM").ToUpper()</div>
                            </div>
                            <div class="entry-meta">
                                <h3>@(string.IsNullOrWhiteSpace(entry.Title) ? "Untitled Entry" : entry.Title)</h3>
                                <p class="entry-timestamp">
                                    Created: @entry.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                                    @if (entry.UpdatedAt > entry.CreatedAt.AddSeconds(5))
                                    {
                                        <span class="updated-time">‚Ä¢ Updated: @entry.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                                    }
                                </p>
                            </div>
                            <div class="entry-actions">
                                <button class="action-btn" @onclick='() => Navigation.NavigateTo($"/today/{entry.Id}")'>‚úèÔ∏è</button>
                                <button class="action-btn" @onclick="() => DeleteEntry(entry.Id)">üóëÔ∏è</button>
                            </div>
                        </div>

                        <div class="entry-body">
                            @{
                                var primaryMood = entry.Moods.FirstOrDefault();
                                var secondaryMoods = entry.Moods.Skip(1).ToList();
                            }
                            <div class="entry-moods">
                                @if (primaryMood != null)
                                {
                                    <span class="mood-tag primary">@primaryMood.Icon @primaryMood.Name</span>
                                }
                                @foreach (var sm in secondaryMoods)
                                {
                                    <span class="mood-tag">@sm.Icon @sm.Name</span>
                                }
                            </div>

                            <div class="entry-full-content">
                                @((MarkupString)DbConstants.MarkdownToHtml(entry.Content))
                            </div>

                            <div class="entry-footer-meta">
                                @if (entry.Category != null)
                                {
                                    <span class="category-badge" style="background-color: @entry.Category.ColorHex">@entry.Category.Name</span>
                                }
                                <div class="entry-item-tags">
                                    @foreach(var t in entry.Tags)
                                    {
                                        <span class="small-tag">#@t.Name</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="entry-footer">
                            <span class="stat">üìù @GetWordCount(entry.Content) words</span>
                            <button class="read-more-btn" @onclick='() => Navigation.NavigateTo($"/today/{entry.Id}")'>Edit Details ‚Üí</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="pagination">
            <button class="page-btn" disabled="@(!ViewModel.HasPreviousPage)" @onclick="() => ViewModel.ChangePageAsync(-1)">‚Äπ Previous</button>
            <div class="page-numbers">
                <span class="page-num active">@ViewModel.CurrentPage of @ViewModel.TotalPages</span>
            </div>
            <button class="page-btn" disabled="@(!ViewModel.HasNextPage)" @onclick="() => ViewModel.ChangePageAsync(1)">Next ‚Ä∫</button>
        </div>
    }
</div>

@code {
    protected override async Task OnInitializedAsync() => await ViewModel.InitializeAsync();

    private async Task HandleSearch(KeyboardEventArgs e) => await ViewModel.LoadEntriesAsync();

    private async Task OnCategoryChanged(ChangeEventArgs e)
    {
        ViewModel.SelectedCategoryId = int.TryParse(e.Value?.ToString(), out var id) ? id : null;
        await ViewModel.LoadEntriesAsync();
    }

    private async Task OnStartDateChanged(ChangeEventArgs e)
    {
        ViewModel.StartDate = DateTime.TryParse(e.Value?.ToString(), out var date) ? date : null;
        await ViewModel.LoadEntriesAsync();
    }

    private async Task OnEndDateChanged(ChangeEventArgs e)
    {
        ViewModel.EndDate = DateTime.TryParse(e.Value?.ToString(), out var date) ? date : null;
        await ViewModel.LoadEntriesAsync();
    }

    private async Task OnMoodToggled(int moodId)
    {
        ViewModel.ToggleMoodFilter(moodId);
        await ViewModel.LoadEntriesAsync();
    }

    private async Task OnTagToggled(int tagId)
    {
        ViewModel.ToggleTagFilter(tagId);
        await ViewModel.LoadEntriesAsync();
    }

    private async Task ClearFilters()
    {
        ViewModel.SearchTerm = null;
        ViewModel.SelectedMoodIds.Clear();
        ViewModel.SelectedCategoryId = null;
        ViewModel.StartDate = null;
        ViewModel.EndDate = null;
        ViewModel.SelectedTagIds.Clear();
        await ViewModel.LoadEntriesAsync();
    }

    private async Task DeleteEntry(int id)
    {
        if (Application.Current?.MainPage != null)
        {
            var confirmed = await Application.Current.MainPage.DisplayAlert("Delete Entry", "Are you sure you want to delete this entry?", "Yes", "No");
            if (confirmed)
            {
                await ViewModel.DeleteEntryAsync(id);
                StateHasChanged();
            }
        }
    }

    private int GetWordCount(string content)
    {
        if (string.IsNullOrWhiteSpace(content)) return 0;
        var clean = Regex.Replace(content, @"([#*_`\[\]\(\)])", "");
        return clean.Split(new[] { ' ', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries).Length;
    }
}

