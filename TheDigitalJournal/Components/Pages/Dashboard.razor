@page "/"
@using TheDigitalJournal.ViewModels
@inject DashboardViewModel ViewModel
@inject NavigationManager Navigation

<div class="dashboard-root">
    <div class="welcome-header">
        <h1>Welcome back</h1>
        <p>Here is an overview of your journal.</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card card">
            <span class="label">Current Streak</span>
            <div class="value">@ViewModel.CurrentStreak <span>days</span></div>
        </div>
        <div class="stat-card card">
            <span class="label">Best Streak</span>
            <div class="value">@ViewModel.LongestStreak <span>days</span></div>
        </div>
        <div class="stat-card card">
            <span class="label">Total Entries</span>
            <div class="value">@ViewModel.TotalEntries</div>
        </div>
        <div class="stat-card card">
            <span class="label">Primary Mood</span>
            <div class="value">@ViewModel.MostFrequentMood</div>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="card recent-activity">
            <div class="card-header">
                <h3>Recent Activity</h3>
                <button class="text-link" @onclick='() => Navigation.NavigateTo("entries")'>View all</button>
            </div>
            <div class="activity-list">
                @foreach (var entry in ViewModel.RecentEntries)
                {
                    <div class="activity-item" @onclick='() => Navigation.NavigateTo($"/today/{entry.Id}")'>
                        <div class="date-box">
                            <span class="day">@entry.Date.Day</span>
                            <span class="mon">@entry.Date.ToString("MMM")</span>
                        </div>
                        <div class="info">
                            <span class="title">@(string.IsNullOrWhiteSpace(entry.Title) ? "Untitled Entry" : entry.Title)</span>
                            <span class="mood">@entry.Moods.FirstOrDefault()?.Icon @entry.Moods.FirstOrDefault()?.Name</span>
                        </div>
                        <span class="arrow">â†’</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code { protected override async Task OnInitializedAsync() => await ViewModel.InitializeAsync(); }

<style>
    .welcome-header { margin-bottom: 3rem; }
    .welcome-header h1 { font-size: 2.5rem; margin-bottom: 0.5rem; }
    .welcome-header p { color: var(--text-muted); font-size: 1.1rem; }
    
    .stats-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem; margin-bottom: 3rem; }
    .stat-card { padding: 1.5rem; }
    .stat-card .label { font-size: 0.75rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase; display: block; margin-bottom: 0.5rem; }
    .stat-card .value { font-size: 2rem; font-weight: 800; color: var(--text-main); }
    .stat-card .value span { font-size: 1rem; color: var(--text-muted); font-weight: 400; }
    
    .card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; }
    .text-link { background: none; border: none; color: var(--primary); font-weight: 600; cursor: pointer; }
    .activity-list { display: flex; flex-direction: column; gap: 1rem; }
    .activity-item { display: flex; align-items: center; gap: 1.5rem; padding: 1rem; border-radius: 12px; border: 1px solid var(--border); cursor: pointer; transition: 0.2s; }
    .activity-item:hover { border-color: var(--primary); background: rgba(var(--primary-rgb), 0.02); }
    .date-box { width: 50px; height: 50px; background: var(--bg-page); border-radius: 10px; display: flex; flex-direction: column; align-items: center; justify-content: center; }
    .date-box .day { font-weight: 800; line-height: 1; }
    .date-box .mon { font-size: 0.65rem; text-transform: uppercase; font-weight: 700; color: var(--text-muted); }
    .info { flex: 1; }
    .info .title { display: block; font-weight: 600; margin-bottom: 0.25rem; }
    .info .mood { font-size: 0.8rem; color: var(--text-muted); }
    .arrow { color: var(--text-muted); font-weight: 300; }
</style>